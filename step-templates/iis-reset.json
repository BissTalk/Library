  "Name": "IIS - Reset",
  "Description": "Starts, stops, or resets IIS using iisreset",
  "ActionType": "Octopus.Script",
  "Version": 1,
  "CommunityActionTemplateId": null,
  "Properties": {
    "Octopus.Action.Script.Syntax": "PowerShell",
    "Octopus.Action.Script.ScriptSource": "Inline",
    "Octopus.Action.RunOnServer": "false",
    "Octopus.Action.Script.ScriptBody": "$action = $OctopusParameters[\"Action\"]\nif ($Action -eq \"/RESET\") { Write-Host \"Resetting IIS\" }\nelseif ($Action -eq \"/START\") { Write-Host \"Starting IIS\" }\nelseif ($Action -eq \"/STOP\") { Write-Host \"Stopping IIS\" }\n\nStart-Process -FilePath \"iisreset\" -ArgumentList $Action -Wait -ErrorAction $OctopusParameters[\"ErrorAction\"]",
